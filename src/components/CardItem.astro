---
export interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<li class="card">
  <span>{title}</span>
  <div>
    <p>{body}</p>
  </div>
</li>
<style>
  .card {
    padding: 1rem;
    font-size: 1.2rem;
    min-width: 250px;
    /* flex: 1; */
    border: 1px solid darkblue;
    background-color: rgba(var(--accent-color), 0.1);
    border-radius: 0.4rem;
    box-shadow: 3px 3px 0 0 rgba(var(--accent-color), 0.4);
    background-image: var(--gradient-transparent);
    background-size: 300%;
    background-repeat: no-repeat;
    background-position: 150%;
    transition: all 250ms var(--main-bezier);
  }
  .card:is(:hover, :focus, :target) {
    background-position: 20%;
    color: white;
    font-weight: 600;
  }
</style>
